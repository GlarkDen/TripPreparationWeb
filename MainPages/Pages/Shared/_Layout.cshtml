<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - СборПоход</title>
	<link rel="icon" href="/img/backpack-2.png" type="image/png">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MainPages.styles.css" asp-append-version="true" />
	<link media="print" rel="stylesheet" href="~/css/print.css" asp-append-version="true">
</head>
<body>
	<header>
		<nav class="navbar navbar-fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				@if (GlobalVar.StartPages.Contains(ViewData["Title"]))
				{
					<a style="font-size: 23px;" class="navbar-brand" asp-area="" asp-page="/Index">СборПоход</a>
				}
				else
				{
					<a style="font-size: 23px;" class="navbar-brand" asp-area="" asp-page="/">СборПоход</a>
					<a style="font-size: 23px;" class="nav-link text-dark" asp-area="" asp-page="/Menu/Trips" asp-route-Id="@Model.User.UserNumber">Мои походы</a>
				}
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
					</ul>

					<ul class="navbar-nav navbar-right">
						@if (GlobalVar.StartPages.Contains(ViewData["Title"]))
						{
							<li class="nav-item">
								<a style="font-size: 18px;" class="nav-link text-dark" asp-area="" asp-page="/Login/Login">Вход</a>
							</li>
							<li class="nav-item">
								<a style="font-size: 18px;" class="nav-link text-dark" asp-area="" asp-page="/Login/Registration">Регистрация</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link navbar-image" style="padding-right: 3px;" asp-area="" asp-page="/Menu/Profile" asp-route-Id="@Model.User.UserNumber">
									<span style="color: black; padding-right: 5px; font-size: 23px; position:relative; top: 3px;">@Model.User.Name, №@Model.User.UserNumber</span>
									<img src="/img/Profile.png" alt="Профиль" width="50">
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link navbar-image" asp-area="" asp-page="/Login/Login"><img src="/img/exit.png" alt="Выход" width="50"></a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - СборПоход - <a href="https://vk.com/climber_rock">Денис Гоголев</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>